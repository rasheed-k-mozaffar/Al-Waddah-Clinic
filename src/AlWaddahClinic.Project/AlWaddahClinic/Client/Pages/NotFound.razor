@page "/notfound"
@inject NavigationManager NavigationManager
@inject ILanguageContainerService Lang

@layout EmptyLayout

<MudGrid Justify="Justify.Center" Class="page-style">
    <MudItem xs="11" md="6" lg="6">
        <MudCard style="width: 100%; padding: 2rem;">
            <MudCardContent>
                <MudText Align="Align.Center" Typo="Typo.h3" Color="Color.Error"><b>@Lang.Keys["NotFound:Title"]</b></MudText>
                <MudText Align="Align.Center" Typo="Typo.body1">
                    @Lang.Keys["NotFound:Message"]
                </MudText>
                <MudItem Class="d-flex justify-center mt-3">
                    <MudButton Class="justifiy-center" Variant="Variant.Filled" Color="Color.Error"
                               @onclick='( () => NavigationManager.NavigateTo("/") )'>
                        @Lang.Keys["NotFound:Dash"]
                    </MudButton>
                </MudItem>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<style>
    .page-style{
        height: 100vh;
        place-items: center;
        background-image: linear-gradient(to right, @(Colors.Red.Lighten1), @(Colors.Blue.Darken3));
    }
</style>

@code {
    protected override void OnInitialized()
    {
        Lang.InitLocalizedComponent(this);
        base.OnInitialized();
    }
}