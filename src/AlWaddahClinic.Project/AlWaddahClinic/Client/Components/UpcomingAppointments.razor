<MudCard>
    @if (_isBusy == true)
    {
        <MudItem Class="d-flex align-center justify-center" Style="height: 300px;">
            <Loader />
        </MudItem>
    }
    else
    {
        <MudCardHeader Class="d-flex justify-space-between">
            <MudItem>
                <MudText Typo="Typo.h6"><b>Upcoming Appointments Within @PeriodInHours Hours</b></MudText>
            </MudItem>

            <MudItem>
                <select  @bind="PeriodInHours" @oninput="ChangeTimePeriod">
                    <option value="24">24 Hours</option>
                    <option value="48">48 Hours</option>
                    <option value="72">72 Hours</option>
                </select>
            </MudItem>
        </MudCardHeader>

        <MudCardContent>
            @if (appointments.Any())
            {
                <MudSimpleTable Bordered="true" Hover="true" Dense="@_isDense">
                    <thead>
                        <tr>
                            <td>Patient's Name</td>
                            <td>Starts At</td>
                            <td style="text-align: end;">Quick Actions (Currently unavailable)</td>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var appointment in appointments)
                        {
                            <tr>
                                <td>@appointment.PatientName</td>
                                <td>@appointment.StartAt.Value</td>
                                <td style="text-align: end;">
                                    <MudIconButton Color="Color.Error" Icon="@Icons.Material.Filled.DeleteOutline" Disabled="true"/>
                                    <MudIconButton Color="Color.Warning" Icon="@Icons.Material.Filled.EditCalendar" Disabled="true"/>
                                </td>
                            </tr>
                        }
                    </tbody>
                </MudSimpleTable>
                <MudSwitch @bind-Checked="@_isDense" Color="Color.Primary"><b>Compact Table</b></MudSwitch>
            }
            else
            {
                <MudAlert Severity="Severity.Success" Variant="Variant.Filled">You don't seem to have any upcoming appointments within the next @PeriodInHours hours!</MudAlert>
            }
        </MudCardContent>
    }
</MudCard>
