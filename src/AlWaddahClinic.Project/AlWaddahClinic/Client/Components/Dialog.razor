@inject ILanguageContainerService Lang
<MudDialog Style="padding: 1rem;">
    <DialogContent>
        <MudText Typo="Typo.h4" ><b>@Header</b></MudText>
        <MudDivider Class="mb-5"/>
        @Content
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@CancelButton</MudButton>
        <MudButton Variant="Variant.Filled" Color="@Color" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Header { get; set; }
    [Parameter] public string Content { get; set; }
    [Parameter] public string ButtonText { get; set; }
    [Parameter] public string CancelButton { get; set; }
    [Parameter] public Color Color { get; set; }

    private void Submit() => MudDialog.Close();
    private void Cancel() => MudDialog.Cancel();

    protected override void OnInitialized()
    {
        Lang.InitLocalizedComponent(this);
    }
}



